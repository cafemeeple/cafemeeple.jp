.button, input, textarea
	display inline-block
	appearance none
	border none
	background-color rgb(60, 60, 60)
	color white
	padding 0.75em 1em
	font inherit
	border-radius 3px
	transition all 250ms ease
	height 42px
	text-align left
	margin-right 0.5em

input:focus, textarea:focus
	box-shadow 0 0 4px mainColor

textarea
	width 100%
	height 200px
	margin 0
	transition none
	line-height 1.5em

.button
	text-align center

	&:hover
		cursor pointer
		background-color rgb(80, 80, 80)