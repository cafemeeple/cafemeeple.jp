.hangout-info
	color uiTextColor
	background uiBackground
	border-radius borderRadius

.hangout
	margin-bottom 1em

.hangout-actions
	display flex
	flex-flow row wrap
	justify-content center
	margin-top 0.5em
	.button
		margin-left 0.5em
		flex 1
		max-width 150px

.action-join
	background rgb(32, 160, 32)

	&:hover
		background rgb(32, 160, 32) + 20%

.action-delete
	background rgb(160, 32, 32)

	&:hover
		background rgb(160, 32, 32) + 20%

.hangout-members
.hangout-message
.hangout-datetime
	margin-left 1em
	margin-right 1em

.hangout-members
	display block
	padding-bottom 1em

.hangout-game
	padding 0.75em
	font-size 1.5em
	background uiBackground + 10%
	border-top-right-radius borderRadius
	border-top-left-radius borderRadius

	.fa
		opacity 0.5
		float right

.hangout-datetime
	font-size 0.8em

.hangout-date, .hangout-time
	display inline-block
	opacity 0.5
	margin 0
	margin-right 1em