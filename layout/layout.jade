doctype html
html
	head
		title= app.config.title

	body
		#header
			h1#title
				a.ajax(href='/')
					.title-word Cafe
					| 
					.title-word Meeple
		if !user
			#toolbar
				a.button(href='/auth/facebook')
					span.fa.fa-sign-in
					| Facebook login
		else
			#toolbar
				a.button.ajax(href='/')
					span.fa.fa-group
					| Hangouts
				a.button.ajax(href='/leaderboards')
					span.fa.fa-trophy
					| Leaderboards
				a.button.ajax(href='/profile')
					span.fa.fa-user
					| Profile
				a.button.ajax(href='/settings')
					span.fa.fa-cog
					| Settings
				a.button(href='/logout')
					span.fa.fa-sign-out
					| Logout
		main#content!= content